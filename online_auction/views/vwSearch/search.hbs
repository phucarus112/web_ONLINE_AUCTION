<!-- Product Shop Section Begin -->
    <section class="product-shop spad">
        <div class="container">
            <div class="row">
              
                <div class="col-lg-12 order-1 order-lg-2">
                    <div class="product-show-option">
                        <div class="row">
                            <div class="col-lg-7 col-md-7">
                                <div class="select-option">
                                    <form method="POST" id="frmType" name="frmType">
                                          <input type="text" class="form-control" id="temp" name="temp" value="{{this.KEY}}"
                                            style="display: none;">
                                         <select class="sorting" id="type" name="type" onchange="javascript: $('#frmType').submit();">
                                        <option value="1">Xếp theo ID</option>
                                       <option value="2">Xếp theo Giá</option>
                                    </select>
                                    </form>
                                   
                                </div>
                            </div>
                            <div class="col-lg-5 col-md-5 text-right">
                                <p>{{this.resultSearch.length}} results</p>
                            </div>
                        </div>
                    </div>
                    <div class="product-list">
                        <div class="row">
							{{#if this.empty}}
								<div class="card-body">
				            <p class="card-text">
					            Không tìm được kết quả
				            </p>
			                </div>
							{{else}}
								{{#each this.resultSearch}}
								 <div class="col-lg-4 col-sm-6">
                                <div class="product-item">
                                    <div class="pi-pic">
                                        <img src="/imgs/sp/{{ID}}/main_thumb.jpg" alt="">
                            
                                       
                                        <ul>
                                            <li class="w-icon active"><a href="#"><i class="icon_bag_alt"></i></a></li>
                                            <li class="quick-view"><a href="/categories/detail/{{ID}}">+ Quick View</a></li>
                                            <li class="w-icon"><a href="#"><i class="fa fa-random"></i></a></li>
                                        </ul>
                                    </div>
                                 <div class="pi-text">
                                <div class="catagory-name"></div>
                                <a href="/categories/detail/{{ID}}">
                                   <h4><b>{{NAME}}</b></h4>
                                </a>
                                 <div class="pi-text">
                                            
                                            <h6 class="product-price ">Giá hiện tại: {{format PRICE}}</h6>
                                        </div>
                                         <div >
                                            
                                           <h6>Người đang giữ giá: <i><b>{{BIDDER}}</b></i></h6> 
                                        </div>
                                         <div class="product-price">
                                            
                                            <h6>Số lượt ra giá: <i><b>{{TURN_AUCTION}}</b></i></h6>
                                        </div>
                                         <div class="product-price">
                                            <h6 >Ngày hết hạn: {{formatDate DAYEND}}</h6>
                                            <h6 class="product-price">{{DESCRIPTION}}</h6>
                                         </div>     
                            </div>
                                </div>
                            </div>
								{{/each}}
							{{/if}}
                        </div>
                    </div>
                  <div class="row mt-5">
				<ul style="list-style-type: none; display: flex; margin: 0 auto">
                       
							<li class="mr-2" ><a href="?page={{pre_value}}">&lt;</a></li>
					{{#each this.page_numbers}}
						{{#if isCurrentPage}}
							<li class="active mr-2" ><a href="?page={{value}}" style="color: saddlebrown;">{{value}}</a></li>
						{{else}}
							<li class="mr-2"><a href="?page={{value}}">{{value}}</a></li>
					{{/if}}
					  {{/each}}
					  <li class="mr-2"><a href="?page={{next_value}}">&gt;</a></li>
				</ul>	
	                </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Shop Section End -->
