    <script>
      function assign1(){
          var temp = document.getElementById('temp');
          temp.value = "1";
      }
        function assign2(){
          var temp = document.getElementById('temp');
          temp.value = "2";
      }
      function assignPrice(){
          var temp = document.getElementById('price');
          var temp1 = document.getElementById('temp1');
          var temp2 = document.getElementById('temp2');
          var temp3 = document.getElementById('aucCost');
          temp.value = parseInt(temp1.value)+ parseInt(temp2.value)* parseInt(temp3.value);
      }
    </script>
