    <script>
        const button = document.getElementById("tym");
        const temp =document.getElementById("temp");
        button.addEventListener('click', toggle);

        function toggle() {
            if(button.className == 'icon_heart_alt')
            {
                temp.value= "1";
                 button.className = "icon_heart";
             
            }   
            else 
            {
                temp.value= "0";
                button.className = "icon_heart_alt";
              
            }
         }
    
    </script>
